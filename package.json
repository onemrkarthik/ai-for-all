{
  "name": "ai-for-all",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "npm run check:no-houzz",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "check:no-houzz": "tsx scripts/check-no-houzz-code.ts",
    "check:standards": "tsx scripts/check-standards.ts",
    "db:init": "tsx scripts/init-db.ts",
    "db:reset": "rm -f local.db local.db-wal local.db-shm && tsx scripts/init-db.ts",
    "hooks:install": "bash scripts/install-hooks.sh",
    "setup": "npm install && npm run db:init && npm run hooks:install",
    "postinstall": "bash scripts/install-hooks.sh && (test -f local.db || npm run db:init)",
    "prepare": "husky",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "better-sqlite3": "^12.5.0",
    "marked": "^17.0.1",
    "next": "16.1.1",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.1",
    "eslint-plugin-boundaries": "^5.3.1",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5"
  }
}
