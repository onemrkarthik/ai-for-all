    "@typescript-eslint/parser": "^7.0.0",
    
    "// FORMATTING": "",
    "prettier": "^3.2.0",
    
    "// GIT HOOKS": "",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    
    "// TESTING": "",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    
    "// SCRIPTS": "",
    "ts-node": "^10.9.0"
