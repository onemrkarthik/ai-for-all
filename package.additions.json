{
  "scripts": {
    "// STANDARDS ENFORCEMENT": "",
    "check:standards": "ts-node scripts/check-standards.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    
    "// TESTING": "",
    "test": "jest",
    "test:arch": "jest --testPathPattern=architecture",
    
